{
  "name": "abel-market",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "docker:build": "docker build -t nextjs-app .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t nextjs-app-dev .",
    "docker:run": "docker run -p 3000:3000 nextjs-app",
    "docker:run:dev": "docker run -p 3000:3000 nextjs-app-dev",
    "docker:compose:up": "docker compose up",
    "docker:compose:dev": "docker compose -f docker-compose.dev.yml up",
    "docker:compose:build": "docker compose build",
    "docker:clean": "docker system prune -f",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "eslint": "eslint . --ext .ts,.tsx",
    "eslint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "pre-commit": "npm run eslint:fix && npm run format"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sass": "^1.97.3",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.8.1",
    "typescript": "^5"
  }
}
